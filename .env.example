# Example environment variables for MindGraphix
# Copy this file to .env and fill secrets before running in production

# App
NODE_ENV=development
PORT=8080

# Database (Postgres)
DB_HOST=db
DB_PORT=5432
DB_NAME=mindgraphix
DB_USER=mind
DB_PASSWORD=mindpass
DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}

# SMTP (MailHog for dev)
SMTP_HOST=mailhog
SMTP_PORT=1025
SMTP_USER=
SMTP_PASS=

# Other
SECRET_KEY=change_me_in_production
